generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String   @id @unique
  email       String   @unique
  password    String
  displayName String
  role        Role     @default(Player)
  managerId   String?  @unique
  manager     Manager?
  player      Player?
}

model Manager {
  id          String   @id @unique
  displayName String
  userId      String @unique
  user        User   @relation(fields: [userId], references: [id])
  teams       Team[]
}

model Team {
  id        String   @id @unique
  name      String
  managerId String
  players   Player[]
  manager   Manager  @relation(fields: [managerId], references: [id])
}

model Player {
  id          String       @id @unique
  displayName String
  gamesPlayed Int
  number      Int?
  teamId      String?
  userId      String       @unique
  team        Team?        @relation(fields: [teamId], references: [id])
  user        User         @relation(fields: [userId], references: [id])
  playerStats PlayerStat[]
}

model Game {
  id         Int      @id @unique
  created_at DateTime @default(now())
  game       String
  myTeam     String
  myPts      Int
  oppTeam    String
  oppPts     Int
  sets       Int
  setScores  String?  // JSON string of set scores
  setsWon    String?  // JSON string of sets won by each team
  isActive   Boolean  @default(false)
  currentSet Int      @default(0)
  servingTeam ServingTeam?
}

model PlayerStat {
  id         String   @id @default(uuid())
  value      Float
  created_at DateTime @default(now())
  dayOfGame  String
  playerId   String
  statId     Int
  player     Player   @relation(fields: [playerId], references: [id])
  stat       Stat     @relation(fields: [statId], references: [id])


  @@index([playerId])
  @@index([statId])
}

model Stat {
  id          Int          @id @unique
  name        String       @unique
  playerStats PlayerStat[]
}

enum Role {
  Manager
  Player
}

enum ServingTeam {
  Home
  Away
}
